<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fitsSystemWindows="true"
    tools:ignore="MissingPrefix">
    <RelativeLayout
        android:id="@+id/tutorial_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/txt_tutorial_message"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/rectangle"/>

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_below="@+id/txt_tutorial_message"
            android:layout_marginStart="13dp"
            android:src="@drawable/circle_gradient_bg"
            android:rotation="180"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginEnd="@dimen/_minus60sdp"
        android:layout_marginBottom="@dimen/_minus60sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shophop_bg_circle_primary_alpha"/>


    <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="@dimen/_10sdp"
           android:layout_marginStart="@dimen/_20sdp"
           android:layout_marginEnd="@dimen/_20sdp"
           android:layout_centerInParent="true"
           android:orientation="vertical">

           <ImageView
               android:layout_width="@dimen/_40sdp"
               android:layout_height="@dimen/_40sdp"
               android:visibility="gone"
               android:src="@drawable/leaf_orange"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="GroMart"
               android:gravity="center"
               android:textSize="@dimen/_26sdp"
               android:textColor="@color/colorPrimary"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4FF5B997" />

    </LinearLayout>





    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/splash_img"/>

</RelativeLayout>